source 'https://rubygems.org'

gem 'rails', '3.2.15'
gem 'mongoid'
gem 'jquery-rails'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'haml-rails'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :test do
  gem 'database_cleaner'
  gem 'mongoid-rspec'
  gem 'cucumber-rails'
  gem 'capybara'
  gem 'selenium-webdriver'
end

