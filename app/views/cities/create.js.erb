$('#city_name_auto').val('')
show_city_in_maps('<%= "#{city.name}, #{city.country.name}" %>', '<%= city.latitude %>', '<%= city.longitude %>', true)

$('.counters.hide').show('drop', {direction: 'up'})
$('.finish_my_map.hide').show('drop', {direction: 'up'})

before_cities = $('#cities_count').html()
before_countries = $('#countries_count').html()

if (before_cities != "<%= user.city_count %>") {
  $('#cities_count').html('<%= user.city_count %>').effect('bounce', {times:3}, 600)
}

if (before_countries != "<%= user.countries_count %>") {
  $('#countries_count').html('<%= user.countries_count %>').effect('bounce', {times:3}, 600)
}

if ($('#map_welcome').length > 0) {
  $('#map_welcome').hide('drop', {direction: 'down'}, function() {
    $('#city_name_auto').appendTo('.header').addClass('outside').attr('placeholder', 'Добавить еще город?');
    $('#map_welcome').remove();
  });
}

// Update share info
gon.cities_count = <%= user.city_count %>
gon.map_image = <%= user.world_map_name %>
$('.share_container a.twitter').attr('href', "https://twitter.com/intent/tweet?&text=<%= user.share_text %> <%= request.original_url %>")
$('.share_container a.vk').attr('href', "http://vk.com/share.php?url=<%= request.original_url %>&title=Follow My Travel&description=<%= user.share_text %>&image=<%= request.protocol %><%= request.host_with_port %>/<%= user.world_map_name %>")
